<div class="max-w-7xl mx-auto px-4 py-8">
  <!-- Header -->
  <div class="flex items-center justify-between mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900"><%= @business.name %></h1>
      <% if @business.active %>
        <span class="inline-block mt-2 px-3 py-1 text-sm font-medium text-green-800 bg-green-100 rounded-full">Active</span>
      <% else %>
        <span class="inline-block mt-2 px-3 py-1 text-sm font-medium text-gray-800 bg-gray-100 rounded-full">Inactive</span>
      <% end %>
    </div>
    <div class="flex gap-2">
      <%= link_to "Edit Settings", edit_business_path(@business), class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 focus:ring-4 focus:ring-blue-300" %>
      <%= link_to "Back to Businesses", businesses_path, class: "px-4 py-2 text-gray-700 border border-gray-300 rounded-lg hover:bg-gray-50" %>
    </div>
  </div>

  <div class="grid gap-6 md:grid-cols-2">
    <!-- Locations Card -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-xl font-semibold text-gray-900">Locations</h2>
        <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
      </div>

      <% if @business.locations.any? %>
        <div class="space-y-4">
          <% @business.locations.each do |location| %>
            <div class="border-l-4 border-blue-500 pl-4">
              <% if location.location_type.present? %>
                <span class="inline-block px-2 py-1 text-xs font-medium text-blue-800 bg-blue-100 rounded mb-2">
                  <%= location.location_type.titleize %>
                </span>
              <% end %>
              <p class="text-gray-900"><%= location.street %></p>
              <% if location.street2.present? %>
                <p class="text-gray-600"><%= location.street2 %></p>
              <% end %>
              <p class="text-gray-600">
                <%= [location.city, location.state].compact.join(", ") %>
                <%= location.postal_code %>
              </p>
              <% if location.country.present? %>
                <p class="text-gray-600"><%= location.country %></p>
              <% end %>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500 italic">No locations added yet</p>
      <% end %>
    </div>

    <!-- Contact Information Card -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-xl font-semibold text-gray-900">Contact Information</h2>
        <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
        </svg>
      </div>

      <% if @business.phones.any? %>
        <div class="space-y-3">
          <% @business.phones.each do |phone| %>
            <div class="flex items-start">
              <span class="inline-block px-2 py-1 text-xs font-medium text-gray-700 bg-gray-100 rounded mr-3">
                <%= phone.phone_type.present? ? phone.phone_type.titleize : "Phone" %>
              </span>
              <div>
                <p class="text-gray-900"><%= phone.number %></p>
                <% if phone.extension.present? %>
                  <p class="text-sm text-gray-600">Ext. <%= phone.extension %></p>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500 italic">No phone numbers added yet</p>
      <% end %>
    </div>

    <!-- Staff Overview Card -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-xl font-semibold text-gray-900">Staff</h2>
        <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
        </svg>
      </div>

      <div class="text-center py-4">
        <p class="text-4xl font-bold text-gray-900"><%= @business.employees.count %></p>
        <p class="text-gray-600">Total Employees</p>
        <%= link_to "Manage Staff", employees_path, class: "mt-4 inline-block text-blue-600 hover:text-blue-700" %>
      </div>
    </div>

    <!-- Services Overview Card -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-xl font-semibold text-gray-900">Services</h2>
        <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
        </svg>
      </div>

      <div class="text-center py-4">
        <p class="text-4xl font-bold text-gray-900"><%= @business.services.count %></p>
        <p class="text-gray-600">Services Offered</p>
        <%= link_to "View Services", "#", class: "mt-4 inline-block text-blue-600 hover:text-blue-700" %>
      </div>
    </div>
  </div>
</div>
